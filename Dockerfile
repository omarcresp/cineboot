FROM ubuntu:latest

COPY build/cineboot /usr/local/bin/cineboot

ARG PORT
ARG PGHOST
ARG PGPORT
ARG PGUSER
ARG PGPASSWORD
ARG PGDATABASE

ENV PORT=${PORT}
ENV PGHOST=${PGHOST}
ENV PGPORT=${PGPORT}
ENV PGUSER=${PGUSER}
ENV PGPASSWORD=${PGPASSWORD}
ENV PGDATABASE=${PGDATABASE}

EXPOSE ${PORT}

CMD ["cineboot"]

